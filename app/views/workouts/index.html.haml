%h1 Moje treningi


%div#workouts

  %h2#month
    = link_to "<", date: @date.prev_month
    = @date.strftime("%B %Y")
    = link_to ">", date: @date.next_month
    
  = calendar @date do |date|
    = date.day
    - if @workouts_by_date[date]
      %ul
        - @workouts_by_date[date].each do |w|
          %li
            = link_to w.title, w
%br/
%p
  =link_to "Nowy trening", new_workout_path, class: 'btn btn-primary'